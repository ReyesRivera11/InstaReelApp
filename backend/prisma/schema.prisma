generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  email      String @unique
  password   String

  refresh_tokens refresh_tokens[]
}

model refresh_tokens {
  id      Int    @id @default(autoincrement())
  user_id Int
  user    user   @relation(fields: [user_id], references: [id])
  token   String
}

model client {
  id               Int     @id @default(autoincrement())
  name             String
  username         String  @unique
  description      String?
  id_insta         String?
  long_lived_token String? @db.VarChar(250)
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  email      String @unique
  password   String

  refresh_tokens refresh_tokens[]
}

model refresh_tokens {
  id      Int    @id @default(autoincrement())
  user_id Int
  user    user   @relation(fields: [user_id], references: [id])
  token   String
}

model client {
  id               Int     @id @default(autoincrement())
  name             String
  username         String  @unique
  social_identity  SocialIdentity 
  description      String?
  insta_id         String?
  long_lived_token String? @db.VarChar(250)

  instagram_reels instagram_reels[]
}

model instagram_reels {
  id                 Int        @id @default(autoincrement())
  client_id          Int
  client             client     @relation(fields: [client_id], references: [id])
  status             ReelStatus @default(SCHEDULED)
  title              String
  description        String?
  video_url          String?
  scheduled_date     DateTime?
  container_media_id String?    @unique
  created_at         DateTime?  @default(now())
}

enum SocialIdentity {
  INSTAGRAM
  FACEBOOK
}

enum ReelStatus {
  PUBLISHED
  SCHEDULED
}
